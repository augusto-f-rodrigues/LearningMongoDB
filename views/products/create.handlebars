<h1 class="title">Create Product</h1>

<form action="/products/create" method="post">
  <div class="form-control">
    <label for="name">Name:</label>
    <input type="text" name="name" placeholder="Write the name of product" />
  </div>
  <div class="form-control">
    <label for="name">Image:</label>
    <input type="text" name="image" placeholder="Write the URL of the product image" />
  </div>
  <div class="form-control">
    <label for="price">Price:</label>
    <input type="text" name="price" placeholder="Write the price of product" />
  </div>
  <div class="form-control">
    <label for="description">Description:</label>
    <textarea name="description" placeholder="Write the description of product"></textarea>
  </div>
  <input type="submit" value="Submit" class="btn">
</form>